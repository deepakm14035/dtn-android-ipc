<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Content Provider App"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="message receiver"
        android:layout_below="@+id/heading"></EditText>
    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="message"
        android:layout_below="@+id/receiver"></EditText>
    <EditText
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="app name"
        android:text="com.example.mysignal"
        android:layout_below="@+id/message"></EditText>
    <Button
        android:id="@+id/btn_insert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_below="@id/app_name"></Button>
    <Button
        android:id="@+id/btn_view_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Messages"
        android:layout_below="@id/btn_insert"></Button>
    <Button
        android:id="@+id/btn_update_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Status"
        android:layout_below="@id/btn_view_messages"></Button>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Message"
        android:layout_below="@id/btn_update_status"></Button>
    <Button
        android:id="@+id/btn_add_to_socket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="add Message to socket"
        android:layout_below="@id/btn_delete"></Button>
</RelativeLayout>